{
  "name": "react-electron",
  "version": "1.0.0",
  "description": "React starter boilerplate for run or build in electron (Universal).",
  "repository": {
    "url": "https://github.com/realoiji/react-electron.git",
    "type": "git"
  },
  "author": "Prach Meesumlit (bombom.55@hotmail.com)",
  "license": "MIT",
  "scripts": {
    "dev": "better-npm-run dev",
    "build": "npm run clean && better-npm-run build && node ./scripts/build.js",
    "build:electron": "node ./electronScripts/build.js",
    "build:electron-mac": "node ./electronScripts/build-mac.js",
    "build:all": "npm run build && npm run build:electron",
    "build:all-mac": "npm run build && sudo npm run build:electron-mac",
    "dev:electron": "electron ./build",
    "build:dev:electron": "npm run build && npm run dev:electron",
    "clean": "better-npm-run clean",
    "test": "npm run lint && better-npm-run test",
    "test:watch": "better-npm-run test:watch",
    "lint": "eslint ./app"
  },
  "betterScripts": {
    "dev": {
      "command": "node ./scripts/devServer.js --progress --hide-modules --config ./configs/webpack.config.dev.js",
      "env": {
        "NODE_ENV": "development",
        "BUILD_ENV": "server"
      }
    },
    "build": {
      "command": "webpack --progress --hide-modules --config ./configs/webpack.config.production.js",
      "env": {
        "NODE_ENV": "production",
        "BUILD_ENV": "client"
      }
    },
    "start": {
      "command": "node ./scripts/start.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test": {
      "command": "mocha ./test/*.js --compilers js:babel-register",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test:watch": {
      "command": "mocha ./test/*.js --compilers js:babel-register --watch",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "clean": {
      "command": "rimraf build"
    }
  },
  "dependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.22.0",
    "better-npm-run": "0.0.15",
    "electron": "^1.7.11",
    "electron-packager": "^10.1.1",
    "es6-promise": "^4.0.5",
    "express": "^4.14.1",
    "fs-extra": "^5.0.0",
    "ignore-styles": "^5.0.1",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-helmet": "^5.0.3",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.1",
    "redux-thunk": "^2.2.0",
    "webpack-isomorphic-tools": "^3.0.5"
  },
  "devDependencies": {
    "chalk": "^1.1.3",
    "css-loader": "^0.28.1",
    "eslint": "^4.7.2",
    "eslint-config-standard": "^10.2.0",
    "eslint-config-standard-react": "^4.3.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-plugin-standard": "^3.0.1",
    "expect": "^1.20.2",
    "extract-text-webpack-plugin": "^2.0.0-rc.3",
    "file-loader": "^0.10.0",
    "html-webpack-plugin": "^2.28.0",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.0",
    "react-dev-utils": "^0.5.2",
    "rimraf": "^2.5.4",
    "sass-loader": "^6.0.0",
    "style-loader": "^0.17.0",
    "url-loader": "^0.5.7",
    "webpack": "^3.0.0",
    "webpack-dev-middleware": "^1.10.0",
    "webpack-hot-middleware": "^2.17.0"
  }
}
